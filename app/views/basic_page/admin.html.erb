<div class="admin-posts-index">
  <h1>Listing Posts</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= post.title %>
          </td>
          <td>
            <%= link_to 'Edit', edit_post_path(post), class: "warning-button" %>
          </td>
          <td>
            <%= button_to 'Destroy', post_path(post), class: "danger-button", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="has-text-centered mt-1">
    <%= link_to "New Post", new_post_path, class: "primary-button" %>
  </div>
</div>
